<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/biggerbackground"
    android:orientation="vertical" 
    tools:context=".Extinguisher_Form">

    <Button
        android:id="@+id/buttonback"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/backbutton"
        android:paddingLeft="0dp"
        android:paddingTop="0dp" >

    </Button>

  <ScrollView
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_marginBottom="40dp"
      android:layout_marginTop="40dp"
      android:layout_weight="1"
      android:scrollbars="none" >

   <TableLayout 
    	android:id="@+id/extinguishertable"
    	android:layout_width="match_parent"  
    	android:layout_height="match_parent"  
    	android:shrinkColumns="*"  
    	android:stretchColumns="*">

       <TableRow
           android:id="@+id/testintitle"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal" 
           android:paddingBottom="2dp">

           <TextView
               android:id="@+id/testingtable"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_span="6"
               android:gravity="center"
               android:text="Testing Table"
               android:textColor="@android:color/black"
               android:textColorHint="@android:color/black"
               android:textColorLink="@android:color/black"
               android:textSize="18sp"
               android:textStyle="bold"
               android:typeface="serif" />

       </TableRow>

       <TableRow android:layout_marginTop="1dp" 
           android:id="@+id/tablesubtitles"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/textView1"
               android:layout_width="50dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:paddingLeft="15dp"
               android:text="Test Name"
               android:textSize="15sp"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/textView3"
               android:layout_width="50dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:paddingLeft="10dp"
               android:text="Pass"
               android:textSize="15sp"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/textView4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="15dp"
               android:text="Fail"
               android:textSize="15sp"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/textView5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="20dp"
               android:text="Notes"
               android:textSize="15sp"
               android:textStyle="bold" />

       </TableRow>

       <TableRow android:layout_marginTop="5dp"
           android:id="@+id/tableRow1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" >

           <TextView
               android:id="@+id/textHydro"
               android:layout_width="100dp"
               android:layout_height="fill_parent"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="10dp"
               android:padding="15dp"
               android:text="Hydro Test" />

           <Button
               android:id="@+id/passHydro"
               style="?android:attr/buttonStyleSmall"
               android:layout_width="40dp"
               android:layout_height="50dp" />

           <Button
               android:id="@+id/failHydro"
               style="?android:attr/buttonStyleSmall"
               android:layout_width="40dp"
               android:layout_height="50dp" />

           <EditText
               android:id="@+id/notesHydro"
               android:layout_width="70dp"
               android:layout_height="50dp"
               android:ems="10"
               android:inputType="text" />
           
       </TableRow>

       <TableRow android:layout_marginTop="5dp"
           android:id="@+id/tableRow2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" >

           	<TextView
           	    android:id="@+id/text6year"
           	    android:layout_width="100dp"
           	    android:layout_height="fill_parent"
           	    android:layout_marginLeft="10dp"
           	    android:padding="15dp"
           	    android:text="6 Year Insp" />

			<Button
			    android:id="@+id/pass6year"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="40dp"
			    android:layout_height="50dp" />

			<Button
			    android:id="@+id/fail6year"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="40dp"
			    android:layout_height="50dp" />

			<EditText
               android:id="@+id/notes6year"
               android:inputType="text"
               android:layout_width="70dp"
               android:layout_height="wrap_content"
               android:ems="10" />
       </TableRow>

	   <TableRow android:layout_marginTop="5dp"
        android:id="@+id/tableRow3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" >

        	<TextView
           	    android:id="@+id/textweight"
           	    android:layout_width="100dp"
           	    android:layout_height="fill_parent"
           	    android:layout_marginLeft="10dp"
           	    android:padding="15dp"
           	    android:text="Weight" />

			<Button
			    android:id="@+id/passweight"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="50dp"
			    android:layout_height="50dp" />

			<Button
			    android:id="@+id/failweight"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="50dp"
			    android:layout_height="50dp" />

			<EditText
               android:id="@+id/notesweight"
               android:inputType="text"
               android:layout_width="70dp"
               android:layout_height="wrap_content"
               android:ems="10" />
       </TableRow>
       
	   <TableRow android:layout_marginTop="5dp"
        android:id="@+id/tableRow4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" >

        	<TextView
           	    android:id="@+id/textbracket"
           	    android:layout_width="100dp"
           	    android:layout_height="fill_parent"
           	    android:layout_marginLeft="10dp"
           	    android:padding="15dp"
           	    android:text="Bracket" />

			<Button
			    android:id="@+id/passbracket"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="50dp"
			    android:layout_height="50dp" />

			<Button
			    android:id="@+id/failbracket"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="50dp"
			    android:layout_height="50dp" />

			<EditText
               android:id="@+id/notesbracket"
               android:inputType="text"
               android:layout_width="70dp"
               android:layout_height="wrap_content"
               android:ems="10" />
       </TableRow>

	   <TableRow android:layout_marginTop="5dp"
        android:id="@+id/tableRow5"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" >

        	<TextView
           	    android:id="@+id/textgauge"
           	    android:layout_width="100dp"
           	    android:layout_height="fill_parent"
           	    android:layout_marginLeft="10dp"
           	    android:padding="15dp"
           	    android:text="Gauge" />

			<Button
			    android:id="@+id/passgauge"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="50dp"
			    android:layout_height="50dp" />

			<Button
			    android:id="@+id/failgauge"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="50dp"
			    android:layout_height="50dp" />

			<EditText
               android:id="@+id/notesgauge"
               android:inputType="text"
               android:layout_width="70dp"
               android:layout_height="wrap_content"
               android:ems="10" />
       </TableRow>
       
	   <TableRow android:layout_marginTop="5dp"
        android:id="@+id/tableRow6"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" >

        	<TextView
           	    android:id="@+id/textpullpin"
           	    android:layout_width="100dp"
           	    android:layout_height="fill_parent"
           	    android:layout_marginLeft="10dp"
           	    android:padding="15dp"
           	    android:text="Pull Pin" />

			<Button
			    android:id="@+id/passpullpin"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="50dp"
			    android:layout_height="50dp" />

			<Button
			    android:id="@+id/failpullpin"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="50dp"
			    android:layout_height="50dp" />

			<EditText
               android:id="@+id/notespullpin"
               android:inputType="text"
               android:layout_width="70dp"
               android:layout_height="wrap_content"
               android:ems="10" />
       </TableRow>
      
	   <TableRow android:layout_marginTop="5dp"
        android:id="@+id/tableRow7"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" >

        	<TextView
           	    android:id="@+id/textsignage"
           	    android:layout_width="100dp"
           	    android:layout_height="fill_parent"
           	    android:layout_marginLeft="10dp"
           	    android:padding="15dp"
           	    android:text="Signage" />

			<Button
			    android:id="@+id/passsignage"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="50dp"
			    android:layout_height="50dp" />

			<Button
			    android:id="@+id/failsignage"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="50dp"
			    android:layout_height="50dp" />

			<EditText
               android:id="@+id/notessignage"
               android:inputType="text"
               android:layout_width="70dp"
               android:layout_height="wrap_content"
               android:ems="10" />
       </TableRow>
       <TableRow android:layout_marginTop="5dp"
       android:id="@+id/tableRow8"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" >
        	<TextView
           	    android:id="@+id/textcollar"
           	    android:layout_width="100dp"
           	    android:layout_height="fill_parent"
           	    android:layout_marginLeft="10dp"
           	    android:padding="15dp"
           	    android:text="Collar" />
			<Button
			    android:id="@+id/passcollar"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="50dp"
			    android:layout_height="50dp" />

			<Button
			    android:id="@+id/failcollar"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="50dp"
			    android:layout_height="50dp" />

			<EditText
               android:id="@+id/notescollar"
               android:inputType="text"
               android:layout_width="70dp"
               android:layout_height="wrap_content"
               android:ems="10" />
       </TableRow>
       <TableRow android:layout_marginTop="5dp"
       android:id="@+id/tableRow9"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" >
        	<TextView
           	    android:id="@+id/texthose"
           	    android:layout_width="100dp"
           	    android:layout_height="fill_parent"
           	    android:layout_marginLeft="10dp"
           	    android:padding="15dp"
           	    android:text="Hose" />
			<Button
			    android:id="@+id/passhose"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="50dp"
			    android:layout_height="50dp" />

			<Button
			    android:id="@+id/failhose"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="50dp"
			    android:layout_height="50dp" />

			<EditText
               android:id="@+id/noteshose"
               android:inputType="text"
               android:layout_width="70dp"
               android:layout_height="wrap_content"
               android:ems="10" />
       </TableRow>
       <TableRow 
       android:layout_marginTop="5dp"
       android:id="@+id/tableRow10"
       android:gravity="center"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
           <Button
            android:layout_gravity="center"
        	android:id="@+id/btnsubmitform"
        	android:layout_width="150dp"
        	android:layout_height="50dp"
        	android:background="@drawable/submit_button" />
       </TableRow>
   </TableLayout>
  </ScrollView>

  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/buttonback"
      android:layout_alignParentTop="true"
      android:layout_toRightOf="@+id/buttonback"
      android:gravity="center"
      android:text="Extinguisher Form"
      android:textColor="@android:color/white"
      android:textStyle="bold" />

</RelativeLayout>